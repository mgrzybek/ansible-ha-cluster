{% endif %}

# check run auditd
command[check_auditd]=/usr/lib/nagios/plugins/check_procs -C auditd -w 1: -c 1:

# ssh
command[check_sshd]=/usr/lib/nagios/plugins/check_procs -C sshd -c 1:
