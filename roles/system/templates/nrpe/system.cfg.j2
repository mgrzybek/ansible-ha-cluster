{% if ansible_os_family == 'Suse' %}
# check zypper (critical if security patches, else warning)
command[check_zypper]=/usr/lib/nagios/plugins/check_zypper -p -w security -c none
{% endif %}

{% if ansible_os_family == 'Debian' %}
# check apt (alert on available updates)
command[check_apt]=/usr/lib/nagios/plugins/check_apt
{% endif %}

